<h4>Create event</h4>
<% provide(:title, 'Create event') %>
<% provide(:button_text, 'Create my new event') %>
<%= form_for(@event) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title, style: "margin-left:30%" %>
  <%= f.text_field :title, class: 'form-control', style: "width:40%;margin-left:30%" %>
  <%= f.label :info, style: "margin-left:30%" %>
  <%= f.text_field :info, class: 'form-control', style: "width:40%;margin-left:30%" %>
  <%= f.label :location, style: "margin-left:30%" %>
  <%= f.text_field :location, class: 'form-control', style: "width:40%;margin-left:30%" %>
  <%= f.label :date, style: "margin-left:40%" %>
  <%= f.date_field :date, class: 'form-control', style: "width:20%;margin-left:40%" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary", style: "width:40%;margin-left:30%" %>
<% end %>
